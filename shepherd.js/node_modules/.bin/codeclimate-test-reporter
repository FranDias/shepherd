#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/rwwagner90/shipshape/shepherd/node_modules/.pnpm/codeclimate-test-reporter@0.5.1/node_modules/codeclimate-test-reporter/bin/node_modules:/Users/rwwagner90/shipshape/shepherd/node_modules/.pnpm/codeclimate-test-reporter@0.5.1/node_modules/codeclimate-test-reporter/node_modules:/Users/rwwagner90/shipshape/shepherd/node_modules/.pnpm/codeclimate-test-reporter@0.5.1/node_modules:/Users/rwwagner90/shipshape/shepherd/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/rwwagner90/shipshape/shepherd/node_modules/.pnpm/codeclimate-test-reporter@0.5.1/node_modules/codeclimate-test-reporter/bin/node_modules:/Users/rwwagner90/shipshape/shepherd/node_modules/.pnpm/codeclimate-test-reporter@0.5.1/node_modules/codeclimate-test-reporter/node_modules:/Users/rwwagner90/shipshape/shepherd/node_modules/.pnpm/codeclimate-test-reporter@0.5.1/node_modules:/Users/rwwagner90/shipshape/shepherd/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../codeclimate-test-reporter/bin/codeclimate.js" "$@"
else
  exec node  "$basedir/../codeclimate-test-reporter/bin/codeclimate.js" "$@"
fi
